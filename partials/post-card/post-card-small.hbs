<article class="post-card-small" role="article">
    {{#if feature_image}}
        <a class="post-card-small__img-link" href="{{url}}" aria-label="{{t "Post image link"}}">
            <picture class="post-card-small__img-wrapper">
                <source 
                    srcset="
                    {{img_url feature_image size="300" format="webp" }} 300w,
                    {{img_url feature_image size="150" format="webp" }} 150w"
                    sizes="80px"
                    type="image/webp">
                    <img 
                    srcset="
                    {{img_url feature_image size="300"}} 300w,
                    {{img_url feature_image size="150"}} 150w"
                    sizes="80px"
                    src="{{img_url feature_image size="300"}}"
                    loading="lazy"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}} {{t "Post feature image"}}{{/if}}"
                class="post-card-small__img">
            </picture>
        </a>
    {{else}}
         <a href="{{url}}" class="post-card-small__no-img-link{{#if @custom.dark_mode_logo}} has-dark-version{{/if}}" aria-label="{{t "Post image link"}}">
            {{#if @site.logo}}
                {{#if @custom.dark_mode_logo}}
                <img src="{{img_url @custom.dark_mode_logo}}" alt="{{@site.title}} {{t "logo"}}" data-dark-mode-type="dark-logo" class="post-card-small__no-img post-card-small__no-img--dark"/>
                {{/if}}
                <img src="{{img_url @site.logo}}" alt="{{@site.title}} {{t "logo"}}" data-dark-mode-type="light-logo" class="post-card-small__no-img post-card-small__no-img--light"/>
                {{else}}
                <h3 class="post-card-small__no-img-title">{{@site.title}}</h3>
            {{/if}}
        </a>
    {{/if}}

    <div class="post-card-small__content">
        <h3 class="post-card-small__heading">
            <a class="post-card-small__heading-link" aria-label="{{t "Post title link"}}" href="{{url}}">{{title}}</a>
        </h3>

        <div class="post-card-small__meta">
            {{>post-tags showTagsIcons="true"}}
            <time class="post-card-small__date" datetime="{{date format='YYYY-MM-DD'}}">
                {{date format="MMM D, YYYY"}}
            </time> 
            {{comment_count empty="" singular="" class="post-comment-count"}}
        </div>
    </div>

</article>