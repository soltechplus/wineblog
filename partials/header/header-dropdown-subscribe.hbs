<aside data-dropdown-elem="dropdown" class="subscribe-dropdown">
    <form class="subscribe-dropdown__form" data-members-form="subscribe" data-members-autoredirect="false">
        <picture class="subscribe-dropdown__img-wrapper{{#if @custom.dark_mode_logo}} has-dark-version{{/if}}">
            {{#if @custom.subscribe_image}}
                <source srcset="
                {{img_url @custom.subscribe_image size="960" format="webp" }} 960w,
                {{img_url @custom.subscribe_image size="720" format="webp" }} 720w, 
                {{img_url @custom.subscribe_image size="400" format="webp" }} 400w" 
                sizes="385px" type="image/webp">
                <img srcset="
                {{img_url @custom.subscribe_image size="960"}} 960w,
                {{img_url @custom.subscribe_image size="720"}} 720w, 
                {{img_url @custom.subscribe_image size="400"}} 400w" 
                sizes="385px"
                    src="{{img_url @custom.subscribe_image size="960"}}" alt="{{@site.title}} {{t "subscribe image"}}" class="subscribe-dropdown__img">
            {{else}}
                {{#if @site.logo}}
                    {{#if @custom.dark_mode_logo}}
                        <img class="logo__img logo__img--dark" src="{{img_url @custom.dark_mode_logo}}" alt="{{@site.title}} {{t "icon"}}">
                    {{/if}}
                    <img class="logo__img logo__img--light" src="{{img_url @site.logo}}" alt="{{@site.title}} {{t "icon"}}">
                {{else}}
                    <span class="logo__title">{{@site.title}}</span>
                {{/if}}
            {{/if}}
        </picture>
        <h2 class="subscribe-dropdown__form-title">
            {{t "Don't Miss the Latest News"}}
        </h2>
        <div class="subscribe-dropdown__form-input-wrapper">
            <input autocomplete="off" class="subscribe-dropdown__form-input" data-members-email type="email" name="email-input" id="subscribe-banner-email-input" placeholder="{{t "Enter your email"}}" aria-label="{{t "Your email address"}}" required>
            {{>button btnText="Subscribe" ariaLabel="Subscribe"}}
        </div>
        <p class="subscribe-dropdown__form-error" data-members-error></p>
        {{#if @site.portal_signup_terms_html}}
            <div class="subscribe-dropdown__form-terms">{{{@site.portal_signup_terms_html}}}</div>
        {{/if}}
        <div class="subscribe-dropdown__form-success">
            <h4 class="subscribe-dropdown__form-success-title">
                {{t "Success! Now Check Your Email"}}
            </h4>
            <p class="subscribe-dropdown__form-success-text">
                {{t "To complete Subscribe, click the confirmation link in your inbox. If
                it doesnâ€™t arrive within 3 minutes, check your spam folder."}}
            </p>
        </div>
    </form>
    <div class="subscribe-dropdown__socials">
        <span class="subscribe-dropdown__socials-text">{{t "Follow Us"}}</span>
        {{>socials socialLinkClassName=" social-link--gray-bg"}}
    </div>
</aside>